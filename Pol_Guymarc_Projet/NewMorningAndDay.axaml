<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Pol_Guymarc_Projet.NewMorningAndDayWindow"
        Title="Pol_Guymarc_Projet"
        WindowState="Maximized"
        Opened="ShowNewMorningAndDay"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush Source="avares://Pol_Guymarc_Projet/images/ObjectSelection.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#2D2D3A"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="white"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Styles>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

        <StackPanel Name="MainPanel" Margin="20" Spacing="20">

            <TextBlock Name="NewDayAnounce" Text="Bienvenue à l'aube du jour n°"/>
            <TextBlock Name="AllMissionsState" Text="A propos de vos ressources :"/>

            <StackPanel Spacing="5">
                <TextBlock Name="MoneyWeHave" Text="L'Argent que vous avez :"/>
                <TextBlock Name="MoneyWeOwedSoldiers" Text="L'Argent que vous devez à vos soldats :"/>
                <TextBlock Name="MoneyWeHaveForToday" Text="L'Argent restant pour la journée :"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Name="BreadsWeHave" Text="Le nombre de pains que vous avez :"/>
                <TextBlock Name="BreadsComing" Text="Le nombre de pains commandés d'hier qui arrivent aujourd'hui :"/>
                <TextBlock Name="BreadsWeOwedSoldiers" Text="Le nombre de pains que vous devez à vos soldats :"/>
                <TextBlock Name="BreadsWeHaveForToday" Text="Le nombre de pains restants :"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Name="MeatsWeHave" Text="Le nombre de viandes que vous avez :"/>
                <TextBlock Name="MeatsComing" Text="Le nombre de viandes commandées d'hier qui arrivent aujourd'hui :"/>
                <TextBlock Name="MeatsWeOwedSoldiers" Text="Le nombre de viandes que vous devez à vos soldats :"/>
                <TextBlock Name="MeatsWeHaveForToday" Text="Le nombre de viandes restantes :"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Name="SoldiersWeHave" Text="Nombre de soldats que vous avez :"/>
            </StackPanel>

            <Button Click="BackToMainMenu" Content="Ok" FontSize="20" Padding="20,6"/>

        </StackPanel>

    </ScrollViewer>

</Window>
