<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Pol_Guymarc_Projet.SelectingMissionToSendSoldierWindow"
        Title="Pol_Guymarc_Projet"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
        
        <Window.Background>
                <ImageBrush Source="avares://Pol_Guymarc_Projet/images/MissionSelection.png" Stretch="UniformToFill"/>
        </Window.Background>

        <StackPanel Name="MainPanel">
                <Button Click="BackToMainSoldier" Content="Retour" Background="Black"/>
                <Border Background="black" CornerRadius="10" Padding="10" Width="370">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Background="Black">
                                <Button Name="GoLeft" Click="GoLeftToMission" Content="←" IsVisible="True"/>

                                <StackPanel x:Name="SeeMission" Orientation="Vertical">
                                        <StackPanel HorizontalAlignment="Center">
                                                <TextBlock x:Name="MissionName" Padding="0,15,0,0" FontSize="18" FontWeight="Bold"/>
                                        </StackPanel>
                                        <Image Height="300" Width="230" x:Name="MissionPicture"/>
                                        <TextBlock x:Name="MissionDifficulty" Padding="1,0,1,1"/>
                                        <TextBlock x:Name="MissionNumberOfDays" Padding="1,0,1,1"/>
                                        <TextBlock x:Name="MissionSurvivingChance" Padding="1,0,1,1"/>
                                        <TextBlock x:Name="MissionState" Padding="1,0,1,1"/>
                                        <TextBlock x:Name="MissionEarnings" Padding="1,0,1,1"/>
                                        <TextBlock x:Name="MissionObjectsToReceive" Padding="1,0,1,15"/>
                                        <StackPanel HorizontalAlignment="Center">
                                                <Button Click="ValidateSendingToMission" Name="StartMission" Content="Débuter la mission" IsVisible="True">
                                                <Button.Flyout>
                                                        <Flyout>
                                                                <Border Background="#333" CornerRadius="5" Padding="10">
                                                                        <TextBlock Name="ValidatingSendingSoldierToMission"
                                                                                        Foreground="White"/>
                                                                </Border>
                                                        </Flyout>
                                                </Button.Flyout>
                                                </Button>
                                        </StackPanel>
                                </StackPanel>
                                <Button Name="GoRight" Click="GoRightToMission" Content="→" IsVisible="True" />
                        </StackPanel>
                </Border>
        </StackPanel>
</Window>
                
